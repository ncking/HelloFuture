<h2 class="heading">{{ title }}</h2>

<div class="row">
    <div class="col-sm-12 col-md-6">
        <ul class="list-group">
            {% for client in clients %}
                <li class="list-group-item">{{client.getName()}} 
                    <span class="badge badge-inverse float-xs-right">{{client.getTotalHours()}}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>