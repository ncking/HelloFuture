<h2 class="heading">{{ title }}</h2>

<div class="row">
    <div class="col-sm-12 col-md-6">
        <ul class="list-group">
            {% for range in ranges %}
                <li class="list-group-item">
                    {{range.getStart().format('d-m-Y')}}
                    [
                        {{range.getStart().format('H:i')}} -
                        {{range.getEnd().format('H:i')}}
                    ]
                    <span class="badge badge-inverse float-xs-right">{{range.getHours()}}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
